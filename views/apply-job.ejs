<div style="max-width: 800px; margin: 0 auto;">
    <div class="page-header">
        <h2 class="page-title">Find Your Next Challenge</h2>
        <p class="page-subtitle">Browse Jobs, complete tasks, and get paid.</p>
    </div>

    <div class="card search-card">
        <ion-icon name="search-outline" style="font-size: 1.5rem; color: #94a3b8; margin-left: 5px;"></ion-icon>
        <input type="text" class="search-input" placeholder="Search by skill, category or company...">
        <button class="btn btn-primary">Search</button>
    </div>

    <div style="display: flex; flex-direction: column; gap: 20px;">
        <% jobs.forEach(job => { %>
            <div class="card job-card">
                <div class="job-details">
                    <div class="job-icon">
                        <ion-icon name="briefcase"></ion-icon>
                    </div>
                    <div>
                        <h3 style="font-size: 1.1rem; margin-bottom: 6px; font-weight: 700;"><%= job.title %></h3>
                        <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                            <% job.tags.forEach(tag => { %>
                                <span style="background: #f3f4f6; color: #4b5563; padding: 4px 10px; border-radius: 12px; font-size: 0.75rem; font-weight: 600;"><%= tag %></span>
                            <% }) %>
                        </div>
                    </div>
                </div>
                <div class="job-actions">
                    <div style="font-weight: 800; font-size: 1.2rem; color: #1e1b4b; margin-bottom: 8px;"><%= job.reward %></div>
                    <button class="btn btn-outline" style="padding: 8px 20px; font-size: 0.85rem;">Details</button>
                </div>
            </div>
        <% }) %>
    </div>
</div>