            border-radius: 50%; width: 40px; height: 40px; animation: spin 1s linear infinite; 
            margin-bottom: 20px;
        }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
        .status { color: #666; font-weight: 500; }
    </style>
</head>
<body>

    <div class="loader"></div>
    <p id="status" class="status">Verifying Crowbar ID...</p>

    <script>
        // 1. CONFIG
        const SB_URL = 'https://zfxnhbymlhvukeqmsyhj.supabase.co';
        const SB_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InpmeG5oYnltbGh2dWtlcW1zeWhqIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjE4MTIyMTIsImV4cCI6MjA3NzM4ODIxMn0.kKB1RsLvXJuROPlBY5bWeBzTWDGGe_UTouWkfSc7RXs'; // <--- PASTE YOUR KEY
        const client = supabase.createClient(SB_URL, SB_KEY);

        async function handleSSO() {
            console.log("Checking URL for token...");

           
            const hash = window.location.hash;

            if (hash && hash.includes('access_token')) {
                try {
                    // 1. Parse the hash
                    const params = new URLSearchParams(hash.substring(1)); // remove '#'
                    const accessToken = params.get('access_token');
                    const refreshToken = params.get('refresh_token');

                    if (accessToken) {
                        console.log("Token found manually!");
                        
                        // 2. Save to Storage immediately
                        localStorage.setItem('crowbar_session', accessToken);
                        
                        // 3. Verify user with Supabase (Optional but good)
                        const { data } = await client.auth.getUser(accessToken);
                        
                        if (data && data.user) {
                            localStorage.setItem('crowbar_user', JSON.stringify(data.user));
                        } else {
                            // Fallback dummy user so dashboard doesn't crash
                            const dummyUser = { email: "user@crowbar.com", id: "session_user" };
                            localStorage.setItem('crowbar_user', JSON.stringify(dummyUser));
                        }

                        // 4. Redirect
                        document.getElementById('status').innerText = "Success! Redirecting...";
                        document.getElementById('status').style.color = "green";
                        setTimeout(() => window.location.href = '/dashboard', 500);
                        return;
                    }
                } catch (err) {
                    console.error("Manual extraction failed:", err);
                }
            }

            // --- METHOD 2: SUPABASE SESSION (Backup) ---
            const { data: { session } } = await client.auth.getSession();
            if (session) {
                localStorage.setItem('crowbar_session', session.access_token);
                localStorage.setItem('crowbar_user', JSON.stringify(session.user));
                window.location.href = '/dashboard';
            } else {
                // Only fail if BOTH methods miss
                setTimeout(() => {
                    // One last check
                    if (localStorage.getItem('crowbar_session')) {
                        window.location.href = '/dashboard';
                    } else {
                        document.getElementById('status').innerText = "Authentication Failed.";
                        document.getElementById('status').style.color = "red";
                        setTimeout(() => window.location.href = '/login', 2000);
                    }
                }, 2000);
            }
        }

        handleSSO();
    </script>
