    const client = supabase.createClient(SB_URL, SB_KEY);

    async function initDashboard() {
        const sessionStr = localStorage.getItem('crowbar_session');
        const userStr = localStorage.getItem('crowbar_user');

        if (!sessionStr || !userStr) {
            window.location.href = '/login';
            return;
        }

        const user = JSON.parse(userStr);
        
        const { data: profile, error } = await client
            .from('profiles')
            .select('*')
            .eq('id', user.id)
            .single();

        if (profile) {
            document.getElementById('user-name').innerText = profile.full_name || 'User';
            document.getElementById('user-email').innerText = profile.email;
            document.getElementById('wallet-bal').innerText = '$' + profile.wallet_balance;
            document.getElementById('credits-bal').innerText = profile.credits;
        } else {
            document.getElementById('user-email').innerText = user.email;
            document.getElementById('wallet-bal').innerText = '$0';
            document.getElementById('credits-bal').innerText = '0';
        }

        document.getElementById('loading-screen').style.display = 'none';
        document.getElementById('dashboard-ui').style.display = 'block';
    }

    function logout() {
        localStorage.removeItem('crowbar_session');
        localStorage.removeItem('crowbar_user');
        window.location.href = '/login';
    }

    initDashboard();
</script>