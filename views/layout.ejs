<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | TalentKonnect</title>
    
    <link rel="stylesheet" href="/css/style.css">
    
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>

    <style>
        /* Prevent flashing by hiding auth elements initially */
        #header-profile-pill, #nav-login-btn, #nav-logout-btn, #mobile-logout-btn, #mobile-login-btn {
            display: none;
        }
        
        /* Mobile Login Button Visibility Style */
        .mobile-auth-btn {
            color: #f59e0b !important; /* Gold color for visibility */
            font-weight: 700;
        }
    </style>
</head>
<body>
    
    <div class="crowbar-banner">
        Crowbar Members Get Priority Visibility + Lifetime Access
    </div>

    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="logo-section">
                <ion-icon name="cube" style="color: #f59e0b; font-size: 1.5rem;"></ion-icon>
                TalentKonnect
            </a>

            <div class="nav-links" role="navigation" aria-label="Main navigation">
                <a href="/" class="nav-item">Home</a>
                <a href="/dashboard" class="nav-item">Dashboard</a>
                <a href="/apply-job" class="nav-item">Apply Job</a>
                <a href="/post-job" class="nav-item">Post Job</a>
                <a href="/messaging" class="nav-item">Messages</a>
            </div>

            <div class="nav-right">
                <button class="nav-toggle" aria-label="Open menu" aria-expanded="false">☰</button>

                <div class="profile-pill" id="header-profile-pill">
                    <div class="user-info">
                        <span class="user-name" id="nav-user-name">Loading...</span>
                        <span class="user-role" id="nav-user-role">...</span>
                    </div>
                    <div class="user-avatar" id="nav-user-avatar"></div>
                </div>

                <a href="/login" id="nav-login-btn" class="btn-cta">
                    Login with Crowbar
                </a>

                <a href="#" id="nav-logout-btn" onclick="logout()" class="btn-logout">
                    <ion-icon name="log-out-outline"></ion-icon> Logout
                </a>
            </div>

            <div class="mobile-nav" aria-hidden="true">
                <a href="/" class="nav-item">Home</a>
                <a href="/dashboard" class="nav-item">Dashboard</a>
                <a href="/apply-job" class="nav-item">Apply Job</a>
                <a href="/post-job" class="nav-item">Post Job</a>
                <a href="/messaging" class="nav-item">Messages</a>
                
                <a href="/login" id="mobile-login-btn" class="nav-item mobile-auth-btn">
                    <ion-icon name="log-in-outline" style="vertical-align: middle; margin-right: 5px;"></ion-icon> Login
                </a>

                <a href="#" id="mobile-logout-btn" onclick="logout()" class="nav-item" style="color: #ef4444; border-top: 1px solid #ffffff20; margin-top: 10px;">
                    <ion-icon name="log-out-outline" style="vertical-align: middle; margin-right: 5px;"></ion-icon> Logout
                </a>
            </div>

        </div>
    </nav>
  
    <main class="container">
        <%- body %>
    </main>

    <footer class="site-footer">
        <div class="footer-container">
            <div class="footer-brand">
                <h3>TalentKonnect</h3>
                <p>Unlock your true potential with gamified micro-tasks.</p>
            </div>
            <div class="footer-network">
                <div class="network-tag">
                    Part of the <span class="text-gold">Crowbar Connected Network</span>
                </div>
                <div class="copyright">
                    © 2025 TalentKonnect. All rights reserved.
                </div>
            </div>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            
            // 1. Highlight Active Menu
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-item');
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === currentPath || (currentPath === '/' && link.getAttribute('href') === '/')) {
                    link.classList.add('active');
                }
            });

            // 2. Auth State Management
            const sessionStr = localStorage.getItem('crowbar_session');
            const userStr = localStorage.getItem('crowbar_user');
            
            // Get Elements
            const profilePill = document.getElementById('header-profile-pill');
            const loginBtn = document.getElementById('nav-login-btn');
            const logoutBtn = document.getElementById('nav-logout-btn');
            
            const mobileLoginBtn = document.getElementById('mobile-login-btn');
            const mobileLogoutBtn = document.getElementById('mobile-logout-btn');

            if (sessionStr && userStr) {
                // --- USER IS LOGGED IN ---
                if(loginBtn) loginBtn.style.display = 'none';          
                if(mobileLoginBtn) mobileLoginBtn.style.display = 'none';

                if(profilePill) profilePill.style.display = 'flex';    
                if(logoutBtn) logoutBtn.style.display = 'inline-flex'; 
                if(mobileLogoutBtn) mobileLogoutBtn.style.display = 'block';

                // Fetch Profile Data
                const user = JSON.parse(userStr);
                const SB_URL = 'https://zfxnhbymlhvukeqmsyhj.supabase.co';
                const SB_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InpmeG5oYnltbGh2dWtlcW1zeWhqIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjE4MTIyMTIsImV4cCI6MjA3NzM4ODIxMn0.kKB1RsLvXJuROPlBY5bWeBzTWDGGe_UTouWkfSc7RXs'; 
                const client = supabase.createClient(SB_URL, SB_KEY);

                const { data: profile } = await client
                    .from('profiles')
                    .select('*')
                    .eq('id', user.id)
                    .single();

                if (profile) {
                    document.getElementById('nav-user-name').innerText = profile.full_name || 'User';
                    document.getElementById('nav-user-role').innerText = 'Talent';
                    const initials = (profile.full_name || 'U').charAt(0).toUpperCase();
                    document.getElementById('nav-user-avatar').innerText = initials;
                } else {
                    document.getElementById('nav-user-name').innerText = user.email.split('@')[0];
                }

            } else {
                // --- USER IS LOGGED OUT ---
                if(profilePill) profilePill.style.display = 'none'; 
                if(logoutBtn) logoutBtn.style.display = 'none';     
                if(mobileLogoutBtn) mobileLogoutBtn.style.display = 'none';

                // Show Login Buttons
                if(loginBtn) loginBtn.style.display = 'inline-flex'; 
                if(mobileLoginBtn) mobileLoginBtn.style.display = 'block';
            }
        });

        // Mobile Menu Toggle
        (function(){
            document.addEventListener('DOMContentLoaded', function() {
                const navToggle = document.querySelector('.nav-toggle');
                const mobileNav = document.querySelector('.mobile-nav');

                if (!navToggle || !mobileNav) return;

                navToggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const shown = mobileNav.classList.toggle('_show');
                    navToggle.setAttribute('aria-expanded', shown ? 'true' : 'false');
                    mobileNav.setAttribute('aria-hidden', shown ? 'false' : 'true');
                });

                document.addEventListener('click', (e) => {
                    if (!mobileNav.contains(e.target) && !navToggle.contains(e.target)) {
                        mobileNav.classList.remove('_show');
                        navToggle.setAttribute('aria-expanded', 'false');
                        navToggle.setAttribute('aria-hidden', 'true');
                    }
                });
                
                // Prevent closing when clicking inside menu (except links)
                mobileNav.addEventListener('click', function(e){ 
                    // e.stopPropagation(); 
                });
            });
        })();

        function logout() {
            localStorage.removeItem('crowbar_session');
            localStorage.removeItem('crowbar_user');
            window.location.href = '/';
        }
    </script>

</body>
</html>