        color: white;
        padding: 80px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
    }

    .sidebar-content h1 {
        font-size: 3rem;
        line-height: 1.1;
        margin-bottom: 20px;
        font-weight: 800;
    }

    .sidebar-content p {
        color: #94a3b8;
        font-size: 1.2rem;
        line-height: 1.6;
        max-width: 450px;
    }

    .sidebar-footer {
        margin-top: auto;
        font-size: 0.85rem;
        color: #475569;
    }

    /* RIGHT SIDE (Form) */
    .login-main {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 40px;
        background: #ffffff;
    }

    .login-card {
        width: 100%;
        max-width: 400px;
    }

    .login-header {
        text-align: center;
        margin-bottom: 40px;
    }
    .login-header h2 { font-size: 2.2rem; margin-bottom: 10px; font-weight: 700; color: #111; }
    .login-header p { color: #666; font-size: 1rem; }

    /* Form Styles */
    .form-group { margin-bottom: 20px; }
    .form-label {
        display: block;
        font-size: 0.85rem;
        font-weight: 600;
        color: #334155;
        margin-bottom: 8px;
