    .form-control {
        width: 100%;
        padding: 16px;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        background: #f8fafc;
        font-size: 1rem;
        outline: none;
        transition: 0.2s;
    }
    .form-control:focus { border-color: #4f46e5; background: white; box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1); }

    .btn-submit {
        width: 100%;
        background: #4f46e5; /* Indigo */
        color: white;
        padding: 18px;
        font-size: 1rem;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        margin-top: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        transition: 0.2s;
    }
    .btn-submit:hover { background: #4338ca; transform: translateY(-1px); }

    .auth-footer {
        text-align: center;
        margin-top: 40px;
        font-size: 0.9rem;
        color: #64748b;
        border-top: 1px solid #f1f5f9;
        padding-top: 30px;
    }
    .auth-link {
        color: #4f46e5;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex; align-items: center; gap: 5px;
        margin-top: 5px;
        display: block;
    }
    .auth-link:hover { text-decoration: underline; }

    /* Mobile Responsive */
    @media (max-width: 900px) {
        .login-sidebar { display: none; }
        .login-page-wrapper { justify-content: center; }
        .login-main { padding: 20px; width: 100%; }
    }
</style>

<div class="login-page-wrapper">
    
