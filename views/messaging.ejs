<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Messages</title>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>

    <style>
        /* --- 1. FORCE FULL WIDTH & HEIGHT --- */
        /* This overrides the global .container from layout.ejs */
        main.container {
            max-width: 100% !important;
            width: 100% !important;
            margin: 0 !important;
            padding: 20px !important;
            height: calc(100vh - 70px); /* Fill remaining height below header */
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        /* On Mobile, remove padding completely for app-feel */
        @media (max-width: 768px) {
            main.container {
                padding: 0 !important;
                height: calc(100vh - 60px); /* Adjust for smaller mobile header */
            }
        }

        /* --- 2. MESSENGER CARD LAYOUT --- */
        .messenger-card {
            flex: 1;
            background: white;
            border-radius: 20px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.05);
            border: 1px solid #e2e8f0;
            display: flex; /* Using Flex instead of Grid for better control */
            overflow: hidden;
            position: relative;
        }

        /* --- SIDEBAR (Contact List) --- */
        .msg-sidebar {
            width: 320px; /* Fixed width on desktop */
            border-right: 1px solid #f1f5f9;
            display: flex;
            flex-direction: column;
            background: white;
            height: 100%;
            z-index: 10;
        }

        .msg-header {
            padding: 20px;
            border-bottom: 1px solid #f1f5f9;
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 70px;
            flex-shrink: 0;
        }

        .msg-list {
            flex: 1;
            overflow-y: auto;
        }

        .contact-item {
            display: flex;
            gap: 15px;
            padding: 15px 20px;
            cursor: pointer;
            transition: 0.2s;
            border-left: 4px solid transparent;
            align-items: center;
        }
        .contact-item:hover { background: #f8fafc; }
        .contact-item.active { background: #f0f9ff; border-left-color: #6366f1; }

        .avatar-circle {
            width: 45px; height: 45px;
            border-radius: 50%;
            display: flex; align-items: center; justify-content: center;
            font-weight: 700;
            font-size: 1.1rem;
            flex-shrink: 0;
        }

        /* --- CHAT PANEL (Right Side) --- */
        .chat-panel {
            flex: 1; /* Take remaining width */
            display: flex;
            flex-direction: column;
            background: #f8fafc;
            height: 100%;
            position: relative;
        }

        .chat-top-bar {
            height: 70px;
            background: white;
            border-bottom: 1px solid #e2e8f0;
            padding: 0 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-shrink: 0;
        }

        .messages-container {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        /* Message Bubbles */
        .msg-row { display: flex; flex-direction: column; max-width: 80%; }
        .msg-row.sent { align-self: flex-end; align-items: flex-end; }
        .msg-row.received { align-self: flex-start; align-items: flex-start; }

        .bubble {
            padding: 12px 18px;
            border-radius: 18px;
            font-size: 0.95rem;
            line-height: 1.5;
            position: relative;
            word-wrap: break-word;
        }

        .sent .bubble {
            background: linear-gradient(135deg, #6366f1 0%, #ec4899 100%);
            color: white;
            border-bottom-right-radius: 4px;
            box-shadow: 0 4px 10px rgba(99, 102, 241, 0.2);
        }

        .received .bubble {
            background: white;
            color: #1e1b4b;
            border-bottom-left-radius: 4px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .msg-time { font-size: 0.7rem; color: #94a3b8; margin-top: 5px; }

        /* Input Area */
        .input-wrapper {
            background: white;
            padding: 10px 15px;
            border-top: 1px solid #e2e8f0;
            display: flex;
            align-items: center;
            gap: 10px;
            flex-shrink: 0;
        }

        .msg-input {
            flex: 1;
            padding: 12px 20px;
            border-radius: 30px;
            border: 1px solid #e2e8f0;
            background: #f8fafc;
            outline: none;
            font-size: 0.95rem;
        }
        .msg-input:focus { background: white; border-color: #6366f1; }

        .btn-send {
            width: 45px; height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, #6366f1 0%, #ec4899 100%);
            color: white;
            border: none;
            display: flex; align-items: center; justify-content: center;
            font-size: 1.2rem;
            cursor: pointer;
            flex-shrink: 0;
        }

        .back-arrow { display: none; font-size: 1.5rem; cursor: pointer; margin-right: 10px; color: #64748b; }

        /* --- 3. MOBILE RESPONSIVE FIX --- */
        @media (max-width: 768px) {
            /* Reset Layout */
            .messenger-card {
                border-radius: 0;
                border: none;
                box-shadow: none;
            }

            /* Stack Elements (Show one at a time) */
            .msg-sidebar {
                width: 100%; /* Full width */
                display: flex;
                flex: 1;
            }

            .chat-panel {
                width: 100%; /* Full width */
                display: none; /* Hidden by default */
                position: absolute; /* Cover the sidebar */
                top: 0; left: 0;
                z-index: 20;
            }

            /* Toggle State: Chat Active */
            .messenger-card.show-chat .msg-sidebar {
                display: none;
            }
            .messenger-card.show-chat .chat-panel {
                display: flex;
            }

            .back-arrow { display: block; }
            .msg-input { font-size: 16px; } /* Prevents iOS zoom */
        }
    </style>
</head>
<body>

<div class="messenger-card" id="mainCard">
    
    <aside class="msg-sidebar">
        <div class="msg-header">
            <h3 style="margin:0; font-weight:800; color:#1e1b4b;">Messages</h3>
            <ion-icon name="create-outline" style="font-size:1.4rem; color:#6366f1;"></ion-icon>
        </div>
        
        <div class="msg-list">
            <div class="contact-item active" onclick="openChat('TechCorp HR', 'TC', '#e0e7ff', '#4338ca')">
                <div class="avatar-circle" style="background:#e0e7ff; color:#4338ca;">TC</div>
                <div>
                    <div style="font-weight:700; color:#1e1b4b;">TechCorp HR</div>
                    <div style="font-size:0.85rem; color:#64748b;">Are you available tomorrow?</div>
                </div>
            </div>

            <div class="contact-item" onclick="openChat('Sarah Designer', 'SD', '#dcfce7', '#15803d')">
                <div class="avatar-circle" style="background:#dcfce7; color:#15803d;">SD</div>
                <div>
                    <div style="font-weight:700; color:#1e1b4b;">Sarah Designer</div>
                    <div style="font-size:0.85rem; color:#64748b;">Files have been sent.</div>
                </div>
            </div>
        </div>
    </aside>

    <main class="chat-panel">
        
        <div class="chat-top-bar">
            <div style="display:flex; align-items:center; gap:5px;">
                <ion-icon name="arrow-back" class="back-arrow" onclick="closeChat()"></ion-icon>
                <div class="avatar-circle" id="chat-avatar-el" style="background:#e0e7ff; color:#4338ca; width:35px; height:35px; font-size:0.85rem;">TC</div>
                <div style="margin-left: 10px;">
                    <div id="chat-name-el" style="font-weight:700; color:#1e1b4b; line-height:1.1; font-size: 0.95rem;">TechCorp HR</div>
                    <div style="font-size:0.7rem; color:#10b981; display:flex; align-items:center; gap:3px;">
                        <span style="width:5px; height:5px; background:#10b981; border-radius:50%;"></span> Online
                    </div>
                </div>
            </div>
            <ion-icon name="ellipsis-vertical" style="color:#94a3b8; cursor:pointer; font-size:1.2rem;"></ion-icon>
        </div>

        <div class="messages-container" id="messagesList">
            <div style="text-align:center; font-size:0.8rem; color:#cbd5e1; margin-bottom:10px;">Today</div>
            
            <div class="msg-row received">
                <div class="bubble">Hi! We reviewed your profile on TalentKonnect. Impressive work!</div>
                <div class="msg-time">10:30 AM</div>
            </div>

            <div class="msg-row sent">
                <div class="bubble">Thanks! I appreciate that. I'm actively looking for new gigs.</div>
                <div class="msg-time">10:32 AM</div>
            </div>
        </div>

        <div class="input-wrapper">
            <input type="text" class="msg-input" id="messageInput" placeholder="Type a message..." onkeypress="handleEnter(event)">
            <button class="btn-send" onclick="sendMessage()">
                <ion-icon name="send"></ion-icon>
            </button>
        </div>

    </main>
</div>

<script>
    const mainCard = document.getElementById('mainCard');
    const msgList = document.getElementById('messagesList');
    const msgInput = document.getElementById('messageInput');

    // Scroll to bottom on load
    scrollToBottom();

    function sendMessage() {
        const text = msgInput.value.trim();
        if (!text) return;
        addBubble(text, 'sent');
        msgInput.value = ''; 
        setTimeout(() => {
            addBubble("That sounds great! Let's schedule a call.", 'received');
        }, 1500);
    }

    function addBubble(text, type) {
        const div = document.createElement('div');
        div.className = `msg-row ${type}`;
        const now = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        div.innerHTML = `<div class="bubble">${text}</div><div class="msg-time">${now}</div>`;
        msgList.appendChild(div);
        scrollToBottom();
    }

    function scrollToBottom() {
        msgList.scrollTop = msgList.scrollHeight;
    }

    function handleEnter(e) {
        if (e.key === 'Enter') sendMessage();
    }

    // --- MOBILE NAVIGATION ---
    function openChat(name, initials, bg, color) {
        document.getElementById('chat-name-el').innerText = name;
        const av = document.getElementById('chat-avatar-el');
        av.innerText = initials;
        av.style.background = bg;
        av.style.color = color;
        
        mainCard.classList.add('show-chat');
        scrollToBottom();
    }

    function closeChat() {
        mainCard.classList.remove('show-chat');
    }
</script>

</body>
</html>